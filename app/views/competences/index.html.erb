<h1><%= t('activerecord.models.competence.more') %></h1>

<%= link_to t('helpers.submit.create'), new_competence_path, class: 'btn btn-info' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.competence.title') %></th>
      <th><%= t('activerecord.attributes.competence.description') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competences.each do |competence| %>
      <tr>
        <td><%= competence.title %></td>
        <td><%= competence.description %></td>
        <td><%= link_to '', competence, class: 'glyphicon glyphicon-eye-open' %></td>
        <td><%= link_to 'Edit', edit_competence_path(competence) %></td>
        <td><%= link_to 'Destroy', competence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

