.nav
  .container
    .row
      .col-md-12
        #mobnav-btn
        .ul.sf-menu
          %li= link_to 'Компетенции', competences_path
          %li= link_to 'Активность', activity_compies_path
          - if user_signed_in?
            %li= link_to "Пользователи", users_path if policy(:user).index?
            %li.normal_drop_down
              = link_to content_tag(:span, 'Пользователь') + content_tag(:span, '', class: 'caret'),
                      '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }
              .mobnav-subarrow
              %ul
                %li= link_to 'Профиль', current_user
                %li= link_to 'Выйти', destroy_user_session_path, method: :delete
          - else
            %li= link_to 'Войти', new_user_session_path